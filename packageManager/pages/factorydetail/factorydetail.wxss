/* pages/factorydetail/factorydetail.wxss */
.button-sp-area{
  margin-top:40rpx;
  width: 80%;
  text-align: center;
  display: flex;
  align-items: center;
}
.mini-btn{
  margin-right: 20rpx;
  align-items: center;
}
.container {
  display: flex;
  flex-direction: column;
  min-height: 100%;
  justify-content: space-between;
  font-size: 32rpx;
  font-family: -apple-system-font,Helvetica Neue,Helvetica,sans-serif;
}
.page-head{
  padding: 10rpx 10rpx 30rpx;
  text-align: center;
}
.page-head-title{
  display: inline-block;
  padding: 0 40rpx 20rpx 40rpx;
  font-size: 36rpx;
  color: #1c2438;
}
.page-head-line{
  margin: 0 auto;
  width: 200rpx;
  height: 2rpx;
  background-color: #D8D8D8;
}

.content {
    display: flex;
    flex-direction: column;
    width: 76%;
    padding-left: 20rpx;
}


.row image {
    width: 100rpx;
    height: 100rpx;
    border-radius: 50rpx;
    margin: 20rpx;
}

.top, .bottom {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    width: 100%;
}

.license {
    color: #4d4d4d;
    font-size: 30rpx;
}

.status {
    padding: 10rpx;
    font-size: 26rpx;
    color: #b2b2b2;
}

.text{
   font-size: 30rpx;
   color: white;
   background-color:#1AAD19;
   align-items: center;
   
}
.select{
  margin-top: 17px;
  border-style: solid;
  border-color: #1AAD19;
  border-width: 2px;
  font-size: 30rpx;
}