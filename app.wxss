/**app.wxss**/
@import "./utils/iconfont.wxss";


.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 50rpx 0;
  box-sizing: border-box;
} 

.menu-item{  
  width: 33%;
  height: 9vh;  
  float: left;  
  text-align: center;  
  padding-top: 8px;  
}  
.menu-item2{  
  width: 25%;
  height: 9vh;
  float: left;  
  text-align: center;  
  padding-top: 8px;  
}  
.menu-item3{  
  width: 50%;
  height: 9vh;
  float: left;  
  text-align: center;  
  padding-top: 8px;  
} 
.img{  
  width: 52rpx;  
  height: 52rpx;  
  display: block;  
  margin:auto;  
}  
.clear{  
  clear: both;  
}  
.tab-bar{  
  position: fixed;  
  width: 100%;  
  padding: 0px; 
  background-color:#F0FFF0;
  border-top: 2rpx solid #d7d7d7;
  opacity:1;
}  
.tabbar_text{
  font-size: 30rpx
}

.text{
 display: flex;
 align-items: center;
 justify-content: center;
 font:50px;
 font-weight:bolder;
 margin-top: 25px;
 
}
.page-head-line{
  margin: 0 auto;
  width: 300rpx;
  height: 2rpx;
  background-color: #BEBEBE;
  margin-bottom: 20px;
}


