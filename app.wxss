/**app.wxss**/
@import "./utils/iconfont.wxss";


.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 50rpx 0;
  box-sizing: border-box;
} 

.menu-item{  
  width: 33%;
  height: 9vh;  
  float: left;  
  text-align: center;  
  padding-top: 8px;  
}  
.menu-item2{  
  width: 25%;
  height: 9vh;
  float: left;  
  text-align: center;  
  padding-top: 8px;  
}  
.menu-item3{  
  width: 50%;
  height: 9vh;
  float: left;  
  text-align: center;  
  padding-top: 8px;  
} 
.img{  
  width: 52rpx;  
  height: 52rpx;  
  display: block;  
  margin:auto;  
}  
.clear{  
  clear: both;  
}  
.tab-bar{  
  position: fixed;  
  width: 100%;  
  padding: 0px; 
  background-color:#F0FFF0;
  border-top: 2rpx solid #d7d7d7;
  opacity:1;
}  
.tabbar_text{
  font-size: 30rpx
}

.text{
 display: flex;
 align-items: center;
 justify-content: center;
 font:50px;
 font-weight:bolder;
 margin-top: 15px;
 
}
.page-head-line{
  margin: 0 auto;
  width: 300rpx;
  height: 2rpx;
  background-color: #BEBEBE;
  margin-bottom: 15px;
}
.collapse{
  margin-bottom: 130rpx;
}
.header-title{
  text-align: center;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 31rpx;
  font-weight: 600;
}



/*模板记录卡片样式*/
.record-list{
  font-size: 25rpx;
  display: flex;
  width: 100%;
  padding: 10rpx 0;   
  border-bottom: 1rpx solid #ECECEC;
  color: #6D6D6D;
  justify-content: space-between;
}
.record-info-name{
  color: black;
  font-size: 30rpx;
  margin-bottom: 5rpx;
}
.record-image{
  width: 140rpx;
  height: 168rpx;
  margin: 50rpx;
}
.record-info{
  margin: 15rpx;
  flex: 1;
}
.record-distribution{
  display: flex;
  width: 165rpx;
  margin-right:25rpx; 
}
.record-info-rating{
  display: flex;
  width: 350rpx;
  height: 50rpx;
  line-height: 50rpx;
}
.record-info-rating-stars{
  color: #FFD161;
  width: 130rpx;
  height: 50rpx;
}
.record-info-rating-sales{
  width: 180rpx;
  height: 50rpx;
}
.record-distribution{
  flex-direction: column;
  text-align: right;
  justify-content: center;
}
.record-driver-text{
  width: 110rpx;
  height: 50rpx;
}
.record-driver-name{
  width: 180rpx;
  height: 50rpx;
  display: flex;
}

.panel-area{
margin-top:20rpx; 
width: 100%;
height: 50rpx;
font-size: 34rpx; 
}

/*自定义按钮*/
.i-swipeout-demo-item{
    border-bottom:#333 solid 1px;
}
.i-swipeout-demo-button-group{
    height:100%;
    width:100%;
}



/*头像*/
.userinfo-avatar {  
  overflow:hidden;  
  display: block;  
  width: 180rpx;  
  height: 180rpx;  
  margin: 20rpx;  
  margin-top: 50rpx; 
  margin-left: 76px; 
  border-radius: 50%;  
  border: 3px solid #fff;  
  box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2);  
} 

/**/
/* 侧滑栏 */  
.page_tab {  
  height: 100%;  
  width: 750rpx;  
  position: fixed;  
  z-index: 0;  
  background-color: #F0FFF0 ;
   
}  

.page_tab_content  {  
  background-color: #FAFAFA;
  position: relative;  
  height: 304px; 
  box-shadow: 3px 3px 10px rgba(104, 101, 101, 0.2); 
}  
  
.page_tab_content .wc {  
  color: rgb(73, 70, 70); 
  position: relative;  
  font-size: 36rpx;  
  padding: 20rpx 0 30rpx 20rpx; 
  
}  
  
.page_tab_content button {  
  width: 280rpx;  
  position: relative;  
  right: 120rpx;  
  top: 150rpx;  
  height: 60rpx;  
  line-height: 60rpx;  
}  
  
.page_tab_content image {  
  display: inline-block;  
  height: 40rpx;  
  width: 40rpx;  
  margin-right: 50rpx;  
}  
  
.user_head {  
  width: 140rpx;  
  height: 140rpx;  
  border-radius: 50%;  
  text-align: center;  
  margin: 80rpx 0rpx 0rpx 205rpx;  
} 
.user_name{
  width: 120rpx;  
  height: 20rpx;  
  border-radius: 50%;  
  text-align: center;  
  font-size: 40rpx;
  margin: 10rpx 30rpx 40rpx 205rpx;
}
.page-head-line-left{
  margin: 0 auto;
  width: 100%;
  height: 20rpx;
  background-color: #66CD00(12, 214, 113, 0.247);
}
.page-buttom{
 
 margin-bottom: 0rpx;
 background-color: #EED8AE
}